<div class="navbar navbar-expand-sm navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path do %>
    <%= image_tag "chinese costume.jpg", class: 'logo' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Add Costume", new_costume_path, class:"btn-gradient p-1 ms-5" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Rentals", user_reservations_path(@user), class:"btn-gradient p-1 ms-5" %>
        </li>
        <% end %>

        <li class="nav-item">
          <%= link_to "Browse all Costumes", costumes_path, class:"btn-gradient p-1 ms-5" %>
        </li>
        <% if current_user %>
          <li>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"btn-banner p-1 ms-5"  %>
          </li>
        <% else %>
          <li>
            <%= link_to "Login", user_session_path, class:"btn-banner p-1 ms-5" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
