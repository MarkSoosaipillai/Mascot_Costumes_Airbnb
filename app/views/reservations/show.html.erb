<h1>Rental Info:</h1>

<h3>User: <%= link_to("#{@reservation.user.name}", user_path(@reservation.user)) %></h3>
<h3>Costume: <%= link_to("#{@reservation.costume.name}", costume_path(@reservation.costume)) %></h3>
<h3>Status:  <%= @reservation.status %></h3>
<h3>Start Date:  <%= @reservation.start_date %></h3>
<h3>End Date:  <%= @reservation.end_date %></h3>
<h3>Days:  <%= days(@reservation) %></h3>

<% if current_user.admin %>
	<%= link_to "Edit Reservation", edit_reservation_path(@reservation) %><br><br>
	<%= link_to "Delete Reservation", @reservation, method: :delete, data: {confirm: "Are You Sure?" } %>
<% end %><br><br><br><br>


<%= link_to "Back to Reservations", user_reservations_path(current_user) %>
