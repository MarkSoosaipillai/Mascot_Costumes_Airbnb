<div class="container">
<h1 style="text-align:center">My Rentals:</h1>
<br>
<table style="table-layout: fixed; width: 100%;">
  <tr>
    <th>Costume Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
 <% @reservations.each do |r| %>
    <% if r.user == @user && r.status != "Rejected" %>
      <tr>
        <td class="nr"><%= r.costume.name %></td>
        <td><%= r.start_date %></td>
        <td><%= r.end_date %></td>
        <td><%= r.status %></td>
        <td><%= link_to "Reject this reantal", cancel_reservation_path(r), method: :patch,
                data: {confirm: 'Are you sure?'} %></td>
        <td><%= link_to "Want for approve...??", approved_reservation_path(r), method: :patch,
                data: {confirm: 'Are you sure?'} %></td>

      </tr>
    <% end %>
  <% end %>
</table>
</div>
