<div class="container border border-warning">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="pill" href="#home" role="tab" aria-controls="home" aria-selected="true">My Reservations (<%= @my_reservations.size %>)</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="pill" href="#profile" role="tab" aria-controls="profile" aria-selected="false">My Requests (<%= @my_requests.size %>)</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <br>
              <table style="table-layout: fixed; width: 100%;">
                <tr>
                  <th>Costume Name</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Status</th>
                </tr>
              <% @my_reservations.each do |r| %>
                    <tr>
                      <td class="nr"><%= r.costume.name %></td>
                      <td><%= r.start_date %></td>
                      <td><%= r.end_date %></td>
                      <td><%= r.status %></td>
                      <td><%= link_to "Cancel this reservation", cancel_reservation_path(r), method: :patch,
                              data: {confirm: 'Are you sure?'}, class: "btn-orange" %></td>
                    </tr>
                <% end %>
              </table>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <br>
        <table style="table-layout: fixed; width: 100%;">
        <tr>
          <th>Costume Name</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
        </tr>
        <% @my_requests.each do |r| %>
            <tr>
              <td class="nr"><%= r.costume.name %></td>
              <td><%= r.start_date %></td>
              <td><%= r.end_date %></td>
              <td><%= r.status %></td>
              <td><%= link_to "Reject", cancel_reservation_path(r), method: :patch,
                      data: {confirm: 'Are you sure?'}, class: "btn-gray" %></td>
              <td><%= link_to "Approve this rental", approved_reservation_path(r), method: :patch,
                      data: {confirm: 'Are you sure?'}, class: "btn-gray" %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
