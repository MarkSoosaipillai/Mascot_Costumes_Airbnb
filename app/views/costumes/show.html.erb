<div class="container">
  <div class="row">
    <div class="col-6 mt-6">
      <div class="card-trip p-3">
        <h4 class="text-center"> <%= @costume.name.capitalize %></h4>
        <% @costume.images.each do |image| %>
        <%= cl_image_tag image.key, :transformation=>[
            { :dpr => "auto", :responsive => true, :width => "auto", :crop => "scale"},
            {:height=>300, :crop=>"scale"}
            ] %>
        <% end %>
        <div class="card-trip-infos d-flex flex-column ">
          <h4> <%= @costume.descr %></h4>
          <div class="d-flex justify-content-between">
            <h5> Size: <br> <%= @costume.size %></h5>
            <h5> Price: <br><%= @costume.price %> $</h5>
            <h5> Category: <br><%= @costume.category %></h5>
            <h5> Owner: <br><%= @owner.name %></h5>
          </div>
        </div>
      </div>
      <div class="mt-5 d-flex justify-content-around">
        <%= link_to "Back to the list", costumes_path, class: "btn-gray" %>
        <%= link_to "Update", edit_costume_path(@costume), class: "btn-gray"  %>
        <%= link_to "Delete", costume_path(@costume), method: :delete,
                    data: {confirm: 'Are you sure?'}, class: "btn-gray" %>
      </div>
    </div>
    <div class="col-6 mt-6">
        <%= simple_form_for [@costume, @reservation] do |f| %>
        <h4>Reserve me!</h4>
        <%= f.input :start_date, as: :date , html5: true %>
        <%= f.input :end_date, as: :date, html5: true%>
        <%= f.submit "Reserve", class: "btn-orange" %>
        <% end %>
    </div>
  </div>
  <br>
  <div class="container">
  <div class="row text-light">
      <% if @other_costumes_by_owner.size > 0 %>
         <h2>Other costumes from <%= @owner.name %> </h2>
      <<% end %>>
        <div class="cards">
        <% @other_costumes_by_owner.each do |costume| %>
        <div class="card-trip p-3 ">
          <% costume.images.take(1).each do |image| %>
            <%= cl_image_tag image.key, :transformation=>[
              { :dpr => "auto", :responsive => true, :width => "auto", :crop => "scale"},
              {:height=>300, :crop=>"scale"}
              ] %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to costume.name, costume_path(costume) %></h2>
              <p> <%= costume.descr %></p>
            </div>
            <h2 class="card-trip-pricing"><%= costume.price %>$</h2>
          </div>
        </div>
          <% end %>
      </div>
  </div>
</div>

</div>
