<div class="container">
  <div class="row">
    <div class="col-6 mt-6">
      <div class="card-trip p-3">
        <h4 class="text-center"> <%= @costume.name.capitalize %></h4>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @costume.images.each do |image| %>
               <% if image == @costume.images.first %>
                  <div class="carousel-item active">
                    <%= cl_image_tag image.key, :transformation=>[
                                                { :dpr => "auto", :responsive => true, :width => "auto", :crop => "scale",
                                                :height=>300, :crop=>"scale"}
                                                ]
                    %>
                  </div>
                <%else%>
                  <div class="carousel-item">
                    <%= cl_image_tag image.key, height: 300, width: 400, crop: :fill %>
                  </div>
                <%end%>
            <%end%>
          </div>
        </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <div class="card-trip-infos d-flex flex-column ">
        <h5 class="p-2 text-warning"> <em><%= @costume.descr %></em></h5>
        <div class="d-flex justify-content-between">
          <h6> Size:  <%= @costume.size %></h6>
          <h6> $ <%= @costume.price %> </h6>
        </div>
        <div class="d-flex flex-column justify-content-between">
          <h6> Category: <%= @costume.category %></h6>
          <h6> Owner: <%= @owner.name %></h6>
        </div>
      </div>
    </div>
      <div class="mt-5 d-flex justify-content-around">
        <%= link_to "Back to the list", costumes_path, class: "btn-gray" %>
        <%= link_to "Update", edit_costume_path(@costume), class: "btn-gray"  %>
        <%= link_to "Delete", costume_path(@costume), method: :delete,
                    data: {confirm: 'Are you sure?'}, class: "btn-gray" %>
      </div>
    </div>
    <% if current_user != @owner  && !current_user.nil?%>
      <div class="col-6 mt-6">
          <%= simple_form_for [@costume, @reservation] do |f| %>
          <h4>Reserve me!</h4>
          <%= f.input :start_date, as: :date , html5: true %>
          <%= f.input :end_date, as: :date, html5: true%>
          <%= f.submit "Reserve", class: "btn-orange" %>
          <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <div class="container">
  <div class="row text-light">
      <% if @other_costumes_by_owner.size > 0 %>
         <h2>Other costumes from <%= @owner.name %> </h2>
      <% end %>
        <div class="cards">
        <% @other_costumes_by_owner.each do |costume| %>
        <div class="card-trip p-3 ">
          <% costume.images.take(1).each do |image| %>
            <%= cl_image_tag image.key, :transformation=>[
              { :dpr => "auto", :responsive => true, :width => "auto", :crop => "scale"},
              {:height=>300, :crop=>"scale"}
              ] %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to costume.name, costume_path(costume) %></h2>
              <p> <%= costume.descr %></p>
            </div>
            <h2 class="card-trip-pricing"><%= costume.price %>$</h2>
          </div>
        </div>
        <% end %>
      </div>
  </div>
</div>
</div>
