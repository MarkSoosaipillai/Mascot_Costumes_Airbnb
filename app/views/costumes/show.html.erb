<div class="container">
  <div class="row">
  <h1>More information about the costume you are interrestted in: </h1>
    <div class="col-6 mt-6">
      <div class="card-trip p-3">
          <h1> Costum: <%= @costume.name %></h1>
          <div class="d-flex">
            <div class="p-2"><%= image_tag @costume.image, width:200 %></div>
            <div class="p-2"><%= image_tag @costume.image, width:100 %></div>
            <div class="p-2"><%= image_tag @costume.image, width:100 %></div>
            <div class="p-2"><h4> Size: <%= @costume.size %></h4></div>
            <div class="p-2"><h4> Price: <%= @costume.price %> $</h4></div>
          </div>

          <h3> Send a message to the owner: <%= @costume.user.name %></h3>
        </div>
    <%= link_to "Back to the list", costumes_path, class: "btn btn-primary" %>
    </div>
      <div class="col-6 mt-6">
          <h2>Reserve me!</h2>
         <%= simple_form_for [@costume, @reservation] do |f| %>
        <%= f.input :start_date, as: :date , html5: true %>
        <%= f.input :end_date, as: :date, html5: true%>
        <%= f.submit "Reserve", class: "btn btn-success" %>
      <% end %>

      </div>
  </div>


</div>
