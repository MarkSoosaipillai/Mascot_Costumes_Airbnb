<body style="background-color: floralwhite;">
  <div class="container w-50">
  <h2 style = "text-align: center">Add Costume:</h2>
    <%= simple_form_for  @costume do |f| %>
      <%= f.input :name %>
      <%= f.input :descr %>
      <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: 'd-none'},
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
     <%= f.input :price, hint: "Leave blank if your costume is free", input_html: { autocomplete: "off", value: nil } %>
      <%= f.input :size, :collection => %w[Small Medium Large] %>
      <%= f.input :category, :collection => %w[Corporate Animal Sports Cartoon Wedding]%>
      <%= f.input :images, as: :file, input_html: { multiple: true} %>
      <%= f.submit 'ADD', id: "#myModal", class:"btn btn-success trigger-btn", data: { toggle:"modal", target:"#myModal"}, style: "margin-top: 0" %>
    <% end %>
<!-- Modal HTML -->
<div id="myModal" class="modal fade">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
			<div class="modal-header justify-content-center">
				<div class="icon-box">
					<i class="material-icons">&#xE876;</i>
				</div>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body text-center">
				<h4>Success!</h4>
				<p>You've successfully added a costume.</p>
			</div>
		</div>
	</div>
</div>
  </div>
</body>
